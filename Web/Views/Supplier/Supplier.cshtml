@model Logic.Models.Supplier
@{
    ViewData["Title"] = "Изменить поставщика";
}

@using (Html.BeginForm("Supplier"))
{
    @Html.HiddenFor(model => model.Id)
    <p>Название: @Html.EditorFor(model => model.Name)</p>
    <p>Норма: @Html.EditorFor(model => model.INN)</p>
    <p>Группы: @Html.DropDownList("productGroup", (SelectList)ViewBag.ProductGroups)</p>
    <p></p>
    <a asp-action="AddPG" asp-route-id="@Model.Id">Добавить группу</a>
    <a asp-action="RemovePG" asp-route-id="@Model.Id">Удалить группу</a>
    @Html.ValidationSummary()
    <p><input type="submit" value="Сохранить" /></p>
}